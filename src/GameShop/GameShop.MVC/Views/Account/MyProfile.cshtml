@model GameShop.BLL.DTOs.UserDto

@{
    ViewData["Title"] = "Moj Profil";
}

<link rel="stylesheet" href="~/css/account.css" />

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="glass-panel p-5">

                <div class="text-center mb-5">
                    <div class="mb-3">
                        <i class="bi bi-person-circle display-1 text-neon"></i>
                    </div>
                    <h2 class="profile-username">@Model.Username</h2>
                    <span class="profile-role-badge">@Model.Role</span>
                </div>

                <div class="row g-4 text-center mb-5">
                    <div class="col-md-6">
                        <div class="profile-info-box email">
                            <small class="text-muted text-uppercase mb-2 d-block">Email Adresa</small>
                            <h5 class="text-white mb-0 text-break">@Model.Email</h5>
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="profile-info-box balance">
                            <small class="text-muted text-uppercase mb-2 d-block">Trenutno Stanje</small>
                            <h3 class="profile-balance-text">@Model.Balance.ToString("N2") RSD</h3>
                        </div>
                    </div>
                </div>

                <div class="d-flex justify-content-center gap-3 mt-4 flex-wrap">
                    <a asp-action="EditProfile" class="btn btn-outline-light fw-bold px-4">Izmeni Podatke</a>
                    <a asp-action="ChangePassword" class="btn btn-outline-light fw-bold px-4">Promeni Lozinku</a>
                    <a asp-controller="Store" asp-action="AddFunds" class="btn btn-primary fw-bold px-4">Dodaj Novac</a>
                </div>

            </div>
        </div>
    </div>
</div>