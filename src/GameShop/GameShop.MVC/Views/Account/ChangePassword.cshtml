@model GameShop.MVC.ViewModels.ChangePasswordViewModel

@{
    ViewData["Title"] = "Promena Lozinke";
}

<link rel="stylesheet" href="~/css/account.css" />

<div class="row justify-content-center mt-5">
    <div class="col-md-5">
        <div class="glass-panel p-5">

            <h3 class="text-center mb-4 account-title">
                Promena Lozinke
            </h3>

            <form asp-action="ChangePassword" method="post">
                <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

                <div class="mb-3">
                    <label class="form-label text-muted text-uppercase small fw-bold">Trenutna lozinka</label>
                    <input asp-for="OldPassword" class="form-control" type="password" placeholder="••••••" />
                    <span asp-validation-for="OldPassword" class="text-danger account-validation-error"></span>
                </div>
                <div class="mb-3">
                    <label class="form-label text-muted text-uppercase small fw-bold">Nova lozinka</label>
                    <input asp-for="NewPassword" class="form-control" type="password" placeholder="••••••" />
                    <span asp-validation-for="NewPassword" class="text-danger account-validation-error"></span>
                </div>

                <div class="mb-5">
                    <label class="form-label text-muted text-uppercase small fw-bold">Potvrdi novu lozinku</label>
                    <input asp-for="ConfirmPassword" class="form-control" type="password" placeholder="••••••" />
                    <span asp-validation-for="ConfirmPassword" class="text-danger account-validation-error"></span>
                </div>

                <div class="d-grid gap-2">
                    <button type="submit" class="btn btn-primary btn-lg btn-account-save">
                        PROMENI LOZINKU
                    </button>
                    <a asp-action="MyProfile" class="btn btn-outline-light">Odustani</a>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}