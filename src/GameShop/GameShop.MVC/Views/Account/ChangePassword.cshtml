@model GameShop.MVC.ViewModels.ChangePasswordViewModel

@{
    ViewData["Title"] = "Promena Lozinke";
}

<div class="row justify-content-center mt-5">
    <div class="col-md-5">
        <div class="glass-panel">
            
            <h3 class="text-center mb-4" style="color: var(--neon-green); text-shadow: 0 0 10px rgba(0,255,0,0.3);">
                Promena Lozinke
            </h3>

            <form asp-action="ChangePassword" method="post">
                <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

                <div class="mb-3">
                    <label class="form-label text-muted text-uppercase small">Trenutna lozinka</label>
                    <input asp-for="OldPassword" class="form-control" type="password" placeholder="••••••" />
                    <span asp-validation-for="OldPassword" class="text-danger"></span>
                </div>

                <hr style="border-color: rgba(255,255,255,0.1);" />

                <div class="mb-3">
                    <label class="form-label text-muted text-uppercase small">Nova lozinka</label>
                    <input asp-for="NewPassword" class="form-control" type="password" placeholder="••••••" />
                    <span asp-validation-for="NewPassword" class="text-danger"></span>
                </div>

                <div class="mb-4">
                    <label class="form-label text-muted text-uppercase small">Potvrdi novu lozinku</label>
                    <input asp-for="ConfirmPassword" class="form-control" type="password" placeholder="••••••" />
                    <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
                </div>

                <div class="d-grid gap-2">
                    <button type="submit" class="btn btn-primary btn-lg" style="box-shadow: 0 0 15px rgba(0,255,0,0.2);">
                        PROMENI LOZINKU
                    </button>
                    <a asp-action="MyProfile" class="btn btn-outline-light">Odustani</a>
                </div>
            </form>
        </div>
    </div>
</div>
@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}