@model GameShop.MVC.ViewModels.LoginViewModel

@{
    ViewData["Title"] = "Prijava";
}

<div class="row justify-content-center mt-5">
    <div class="col-md-4">
        <div class="card shadow">
            <div class="card-body">
                <h3 class="text-center mb-4">Prijavi se</h3>

                <form asp-action="Login">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                    <div class="form-group mb-3">
                        <label>Korisničko ime</label>
                        <input asp-for="Username" class="form-control" />
                        <span asp-validation-for="Username" class="text-danger"></span>
                    </div>

                    <div class="form-group mb-3">
                        <label>Lozinka</label>
                        <input asp-for="Password" class="form-control" />
                        <span asp-validation-for="Password" class="text-danger"></span>
                    </div>

                    <div class="d-grid">
                        <button type="submit" class="btn btn-primary">Uloguj se</button>
                    </div>
                </form>
            </div>
            <div class="card-footer text-center">
                <a asp-action="Register">Nemaš nalog? Registruj se</a>
            </div>
        </div>
    </div>
</div>