@model ErrorViewModel
@{
    ViewData["Title"] = "Greška";
}

<div class="container mt-5 text-center">
    <div class="glass-panel p-5 d-inline-block">

        <i class="bi bi-exclamation-octagon-fill display-1 text-danger mb-4"></i>

        <h1 class="error-title mb-3">Došlo je do greške</h1>
        <h4 class="text-white mb-4">Sistem je naišao na neočekivani problem.</h4>

        @if (Model.ShowRequestId)
        {
            <div class="alert alert-danger d-inline-block text-start">
                <strong>Request ID:</strong> <code class="error-code">@Model.RequestId</code>
            </div>
            <br />
        }

        <div class="mt-4">
            <a asp-controller="Home" asp-action="Index" class="btn btn-primary fw-bold px-4">
                <i class="bi bi-house-fill me-2"></i> Povratak na početnu
            </a>
        </div>

    </div>
</div>