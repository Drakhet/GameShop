@model GameShop.MVC.ViewModels.UserViewModel

@{
    ViewData["Title"] = "Create";
}

<div class="row justify-content-center mt-5">
    <div class="col-md-6">
        <div class="glass-panel">
            <h3 class="mb-4">Kreiraj Novog Korisnika</h3>

            <form asp-action="Create" method="post">
                <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

                <div class="mb-3">
                    <label asp-for="Username" class="form-label">Korisničko ime</label>
                    <input asp-for="Username" class="form-control" placeholder="Unesite username..." />
                    <span asp-validation-for="Username" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="Email" class="form-label">Email</label>
                    <input asp-for="Email" class="form-control" placeholder="email@primer.com" />
                    <span asp-validation-for="Email" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="Password" class="form-label">Lozinka</label>
                    <input asp-for="Password" type="password" class="form-control" placeholder="••••••" />
                    <span asp-validation-for="Password" class="text-danger"></span>
                </div>
                <div class="mb-3">
                    <label asp-for="ConfirmPassword" class="form-label">Potvrdi Lozinku</label>
                    <input asp-for="ConfirmPassword" class="form-control" placeholder="••••••" type="password" />
                    <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
                </div>
                <div class="mb-3">
                    <label asp-for="Role" class="form-label">Uloga</label>
                    <select asp-for="Role" class="form-select bg-dark text-white">
                        <option value="User">User</option>
                        <option value="Admin">Admin</option>
                    </select>
                </div>
                <div class="d-grid gap-2">
                    <button type="submit" class="btn btn-success">Kreiraj</button>
                    <a asp-action="Index" class="btn btn-outline-secondary">Nazad na listu</a>
                </div>
            </form>
        </div>
    </div>
</div>
@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}