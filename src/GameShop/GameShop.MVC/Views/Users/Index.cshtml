@model IEnumerable<GameShop.MVC.ViewModels.UserViewModel>

@{
    ViewData["Title"] = "Index";
}

<div class="glass-panel">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2 class="m-0">Upravljanje Korisnicima</h2>
        <a asp-action="Create" class="btn btn-success">+ Novi Korisnik</a>
    </div>

    <div class="table-responsive">
        <table class="table table-dark table-hover bg-transparent" style="--bs-table-bg: transparent;">
            <thead>
                <tr style="border-bottom: 2px solid var(--neon-green);">
                    <th>Username</th>
                    <th>Email</th>
                    <th>Uloga</th>
                    <th>Balans</th>
                    <th class="text-end">Akcije</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr class="align-middle">
                        <td class="fw-bold text-white">@item.Username</td>
                        <td class="text-muted">@item.Email</td>
                        <td>
                            <span class="badge @(item.Role == "Admin" ? "bg-danger" : "bg-primary")">
                                @item.Role
                            </span>
                        </td>
                        <td class="text-end">
                            <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-sm btn-outline-warning me-1">Izmeni</a>
                            <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-sm btn-outline-danger">Obriši</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>
