@model IEnumerable<GameShop.MVC.ViewModels.UserViewModel>

@{
    ViewData["Title"] = "Upravljanje Korisnicima";
}

<link rel="stylesheet" href="~/css/users.css" />

<div class="container">
    <div class="glass-panel p-4 mt-4">

        <div class="d-flex justify-content-between align-items-center mb-4">
            <h2 class="users-page-title">
                Upravljanje Korisnicima
            </h2>
            <a asp-action="Create" class="btn btn-primary fw-bold text-uppercase">
                + Novi Korisnik
            </a>
        </div>

        <div class="table-responsive">
            <table class="table table-hover align-middle mb-0">
                <thead>
                    <tr>
                        <th class="text-uppercase text-muted small">Username</th>
                        <th class="text-uppercase text-muted small">Email</th>
                        <th class="text-center text-uppercase text-muted small">Uloga</th>
                        <th class="text-end text-uppercase text-muted small">Balans</th>
                        <th class="text-end text-uppercase text-muted small">Akcije</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td class="users-table-username">
                                @item.Username
                            </td>

                            <td class="users-table-email">
                                @item.Email
                            </td>

                            <td class="text-center">
                                @if (item.Role == "Admin")
                                {
                                    <span class="role-badge role-badge-admin">Admin</span>
                                }
                                else
                                {
                                    <span class="role-badge role-badge-user">User</span>
                                }
                            </td>

                            <td class="users-table-balance">
                                @(item.Balance.ToString("N2")) RSD
                            </td>

                            <td class="text-end">
                                <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-sm btn-primary fw-bold text-uppercase me-2 px-3">
                                    Izmeni
                                </a>
                                <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-sm btn-outline-danger fw-bold text-uppercase px-3">
                                    Obriši
                                </a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>

    </div>
</div>