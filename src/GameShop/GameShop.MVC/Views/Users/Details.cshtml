@model GameShop.MVC.ViewModels.UserViewModel

@{
    ViewData["Title"] = "Detalji Korisnika";
}

<link rel="stylesheet" href="~/css/users.css" />

<div class="row justify-content-center mt-5">
    <div class="col-md-8">
        <div class="glass-panel p-5">

            <div class="d-flex justify-content-between align-items-start mb-5 border-bottom border-secondary pb-3">
                <div>
                    <h2 class="users-page-title">Detalji Korisnika</h2>
                    <p class="text-muted mb-0 mt-1">ID: @Model.Id</p>
                </div>
                <div>
                    @if (Model.Role == "Admin")
                    {
                        <span class="role-badge role-badge-admin fs-6">Admin</span>
                    }
                    else
                    {
                        <span class="role-badge role-badge-user fs-6">User</span>
                    }
                </div>
            </div>

            <div class="row g-4 mb-5">
                <div class="col-md-6">
                    <div class="p-3 rounded" style="background: rgba(255,255,255,0.05);">
                        <div class="user-details-label">Korisničko ime</div>
                        <div class="user-details-value">@Model.Username</div>
                    </div>
                </div>

                <div class="col-md-6">
                    <div class="p-3 rounded" style="background: rgba(255,255,255,0.05);">
                        <div class="user-details-label">Email Adresa</div>
                        <div class="user-details-value">@Model.Email</div>
                    </div>
                </div>

                <div class="col-md-6">
                    <div class="p-3 rounded" style="border: 1px solid var(--neon-green); background: rgba(0, 255, 0, 0.05);">
                        <div class="user-details-label text-neon">Trenutni Balans</div>
                        <div class="user-details-value neon">@Model.Balance.ToString("N2") RSD</div>
                    </div>
                </div>
            </div>

            <div class="d-flex gap-3">
                <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-primary fw-bold px-4 text-uppercase">
                    Izmeni
                </a>
                <a asp-action="Index" class="btn btn-outline-light px-4">
                    Nazad na listu
                </a>
            </div>

        </div>
    </div>
</div>