@model GameShop.MVC.ViewModels.UserViewModel

@{
    ViewData["Title"] = "Delete";
}
<div class="row justify-content-center mt-5">
    <div class="col-md-6">
        <div class="glass-panel text-center border-danger">
            <h1 class="text-danger mb-3">PAŽNJA</h1>
            <h3>Da li ste sigurni da želite da obrišete korisnika?</h3>
            
            <div class="my-4 p-3 rounded" style="background: rgba(0,0,0,0.3);">
                <h4 class="text-white">@Model.Username</h4>
                <p class="text-muted mb-0">@Model.Email</p>
            </div>

            <form asp-action="Delete">
                <input type="hidden" asp-for="Id" />
                <div class="d-flex justify-content-center gap-3">
                    <a asp-action="Index" class="btn btn-outline-light">Odustani</a>
                    <button type="submit" class="btn px-4">OBRIŠI</button>
                </div>
            </form>
        </div>
    </div>
</div>