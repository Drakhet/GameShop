@model IEnumerable<GameShop.MVC.ViewModels.GameViewModel>

@{
    ViewData["Title"] = "Prodavnica";
    decimal balance = ViewBag.Balance;
}

<div class="d-flex justify-content-between align-items-center mb-4">
    <h1>Prodavnica Igara</h1>
    <div class="alert alert-info mb-0 py-2">
        <strong>Tvoj novčanik: </strong> @balance.ToString("N2") RSD
        <a asp-action="AddFunds" class="btn btn-sm btn-success ms-3">+ Dodaj novac</a>
    </div>
</div>

@if (TempData["ErrorMessage"] != null)
{
    <div class="alert alert-danger">@TempData["ErrorMessage"]</div>
}
@if (TempData["SuccessMessage"] != null)
{
    <div class="alert alert-success">@TempData["SuccessMessage"]</div>
}

<div class="row">
    @foreach (var item in Model)
    {
        <div class="col-md-4 mb-4">
            <div class="card h-100 shadow-sm">
                <div class="card-body d-flex flex-column">
                    <h5 class="card-title">@item.Title</h5>
                    <h6 class="card-subtitle mb-2 text-muted">@item.Genre</h6>
                    <p class="card-text text-truncate">@item.Description</p>

                    <div class="mt-auto">
                        <div class="d-flex justify-content-between align-items-center">
                            <span class="h5 text-primary mb-0">@item.Price.ToString("N2") RSD</span>

                            <form asp-action="Purchase" asp-route-id="@item.Id" method="post">
                                @if (balance >= item.Price)
                                {
                                    <button type="submit" class="btn btn-primary" onclick="return confirm('Da li želite da kupite @item.Title?');">Kupi</button>
                                }
                                else
                                {
                                    <button type="button" class="btn btn-secondary" disabled title="Nemate dovoljno novca">Nedovoljno sredstava</button>
                                }
                            </form>
                        </div>
                    </div>
                </div>
                <div class="card-footer text-muted text-end">
                    <small>Izlazi: @item.ReleaseDate.ToShortDateString()</small>
                </div>
            </div>
        </div>
    }

    @if (!Model.Any())
    {
        <div class="col-12 text-center mt-5">
            <p class="lead text-muted">Trenutno posedujete sve dostupne igre! Vratite se kasnije.</p>
        </div>
    }
</div>