@model IEnumerable<GameShop.MVC.ViewModels.GameViewModel>

@{
    ViewData["Title"] = "Prodavnica";
    decimal balance = ViewBag.Balance;
}

<link rel="stylesheet" href="~/css/store.css" />

<div class="container">

    <div class="d-flex justify-content-between align-items-center mb-5 mt-5">
        <h1 class="display-4 page-header-title">
            <i class="bi bi-shop me-2"></i> Prodavnica
        </h1>

        <div class="wallet-panel glass-panel">
            <span class="wallet-label">Tvoj novčanik:</span>
            <span class="wallet-balance">@balance.ToString("N2") RSD</span>
            <a asp-action="AddFunds" class="btn btn-sm btn-primary ms-3 fw-bold px-3">+ DODAJ</a>
        </div>
    </div>

    @if (TempData["ErrorMessage"] != null)
    {
        <div class="alert alert-danger text-center border-0 mb-4 alert-neon-error">
            <i class="bi bi-exclamation-circle-fill me-2"></i> @TempData["ErrorMessage"]
        </div>
    }
    @if (TempData["SuccessMessage"] != null)
    {
        <div class="alert alert-success text-center border-0 mb-4 alert-neon-success">
            <i class="bi bi-check-circle-fill me-2"></i> @TempData["SuccessMessage"]
        </div>
    }

    <div class="glass-panel p-4 mb-5">
        <form asp-action="Index" method="get">
            <div class="row g-3 align-items-end">

                <div class="col-md-4">
                    <label class="form-label search-label">Pretraga po nazivu</label>
                    <input type="text" name="searchString" class="form-control"
                           placeholder="npr. Cyberpunk..."
                           value="@Context.Request.Query["searchString"]" />
                </div>

                <div class="col-md-3">
                    <label class="form-label search-label">Žanr</label>
                    <select name="gameGenre" class="form-select" asp-items="ViewBag.Genres">
                        <option value="">Svi žanrovi</option>
                    </select>
                </div>

                <div class="col-md-3">
                    <label class="form-label search-label">Maksimalna cena (RSD)</label>
                    <input type="number" name="maxPrice" class="form-control"
                           placeholder="npr. 5000"
                           value="@Context.Request.Query["maxPrice"]" />
                </div>

                <div class="col-md-2 d-grid">
                    <button type="submit" class="btn btn-primary fw-bold">
                        <i class="bi bi-search"></i> PRETRAŽI
                    </button>
                </div>
            </div>
        </form>
    </div>

    <div class="row row-cols-1 row-cols-md-2 row-cols-lg-3 g-4">
        @foreach (var item in Model)
        {
            <div class="col">
                <div class="card h-100 game-card border-0">

                    <div class="store-card-img-wrapper">
                        @if (!string.IsNullOrEmpty(item.CoverImage))
                        {
                            <img src="~/images/games/@item.CoverImage" alt="@item.Title" class="store-card-img">
                        }
                        else
                        {
                            <div class="d-flex align-items-center justify-content-center h-100 bg-dark">
                                <i class="bi bi-image text-muted fs-1"></i>
                            </div>
                        }

                        <span class="badge bg-dark bg-opacity-75 position-absolute top-0 start-0 m-2 border border-secondary text-light">
                            @item.ReleaseDate.Year
                        </span>
                    </div>

                    <div class="card-body d-flex flex-column p-4">

                        <div class="d-flex justify-content-between align-items-start mb-2">
                            <h5 class="store-card-title">
                                @item.Title
                            </h5>
                            <span class="badge bg-secondary bg-opacity-25 border border-secondary text-light">
                                @item.Genre
                            </span>
                        </div>

                        <p class="card-text text-muted flex-grow-1 small text-clamp-3">
                            @item.Description
                        </p>

                        <div class="mt-4 pt-3">
                            <div class="d-flex justify-content-between align-items-center">
                                <span class="store-card-price">@item.Price.ToString("N0") RSD</span>

                                <form asp-action="Purchase" asp-route-id="@item.Id" method="post">
                                    @if (balance >= item.Price)
                                    {
                                        <button type="submit" class="btn btn-primary btn-sm fw-bold px-3"
                                                onclick="return confirm('Kupiti igru @item.Title za @item.Price RSD?');">
                                            <i class="bi bi-cart-plus"></i> KUPI
                                        </button>
                                    }
                                    else
                                    {
                                        <button type="button" class="btn btn-outline-danger btn-sm" disabled style="opacity: 0.7; cursor: not-allowed;">
                                            Nedovoljno novca
                                        </button>
                                    }
                                </form>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        }
    </div>

    @if (!Model.Any())
    {
        <div class="text-center mt-5 py-5 glass-panel">
            <h3 class="text-muted font-orbitron">Nema rezultata pretrage.</h3>
            <p class="text-secondary">Pokušajte da promenite filtere ili dodajte novac na račun.</p>
            <a asp-action="Index" class="btn btn-outline-light mt-3">Prikaži sve igre</a>
        </div>
    }
</div>