@model IEnumerable<GameShop.MVC.ViewModels.GameViewModel>

@{
    ViewData["Title"] = "Prodavnica";
    decimal balance = ViewBag.Balance;
}

<div class="d-flex justify-content-between align-items-center mb-5">
    <h1 class="display-4 fw-bold" style="color: var(--neon-green); text-shadow: 0 0 15px rgba(0,255,0,0.4);">
        PRODAVNICA
    </h1>

    <div class="px-4 py-2 rounded-pill d-flex align-items-center"
         style="background: rgba(0, 255, 0, 0.05); border: 1px solid var(--neon-green); box-shadow: 0 0 10px rgba(0,255,0,0.1);">
        <span class="me-2 text-white">Tvoj novčanik:</span>
        <span class="fs-4 fw-bold" style="color: var(--neon-green);">@balance.ToString("N2") RSD</span>
        <a asp-action="AddFunds" class="btn btn-sm btn-primary ms-3" style="padding: 5px 15px;">+ Dodaj</a>
    </div>
</div>

@if (TempData["ErrorMessage"] != null)
{
    <div class="alert alert-danger text-center border-0 mb-4" style="background: rgba(220, 53, 69, 0.2); color: #ff6b6b;">
        @TempData["ErrorMessage"]
    </div>
}
@if (TempData["SuccessMessage"] != null)
{
    <div class="alert alert-success text-center border-0 mb-4" style="background: rgba(25, 135, 84, 0.2); color: var(--neon-green);">
        @TempData["SuccessMessage"]
    </div>
}

<div class="card mb-5" style="background: rgba(20, 20, 20, 0.6); border: 1px solid rgba(255, 255, 255, 0.1); border-radius: 15px; backdrop-filter: blur(10px);">
    <div class="card-body p-4">
        <form asp-action="Index" method="get">
            <div class="row g-3 align-items-end">

                <div class="col-md-4">
                    <label class="form-label text-muted small text-uppercase">Pretraga po nazivu</label>
                    <input type="text" name="searchString" class="form-control"
                           placeholder="npr. Cyberpunk..."
                           value="@Context.Request.Query["searchString"]"
                           style="background: #111; border: 1px solid #333; color: white;" />
                </div>

                <div class="col-md-3">
                    <label class="form-label text-muted small text-uppercase">Žanr</label>
                    <select name="gameGenre" class="form-select" asp-items="ViewBag.Genres"
                            style="background: #111; border: 1px solid #333; color: white;">
                        <option value="">Svi žanrovi</option>
                    </select>
                </div>

                <div class="col-md-3">
                    <label class="form-label text-muted small text-uppercase">Maksimalna cena (RSD)</label>
                    <input type="number" name="maxPrice" class="form-control"
                           placeholder="npr. 5000"
                           value="@Context.Request.Query["maxPrice"]"
                           style="background: #111; border: 1px solid #333; color: white;" />
                </div>

                <div class="col-md-2 d-grid">
                    <button type="submit" class="btn btn-primary">
                        Pretraži
                    </button>
                </div>
            </div>
        </form>
    </div>
</div>

<div class="row row-cols-1 row-cols-md-2 row-cols-lg-3 g-4">
    @foreach (var item in Model)
    {
        <div class="col">
            <div class="card h-100 game-card">

                <div class="card-header bg-transparent border-0 d-flex justify-content-between pt-3 px-3">
                    <span class="badge bg-secondary">@item.Genre</span>
                    <small class="text-muted">@item.ReleaseDate.Year</small>
                </div>

                <div class="card-body d-flex flex-column">
                    <h5 class="card-title text-uppercase fw-bold mb-3" style="color: var(--neon-green);">@item.Title</h5>
                    <p class="card-text text-muted flex-grow-1" style="font-size: 0.9rem;">
                        @item.Description
                    </p>

                    <div class="mt-4 border-top border-secondary pt-3">
                        <div class="d-flex justify-content-between align-items-center">
                            <span class="fs-5 fw-bold text-white">@item.Price.ToString("N0") RSD</span>

                            <form asp-action="Purchase" asp-route-id="@item.Id" method="post">
                                @if (balance >= item.Price)
                                {
                                    <button type="submit" class="btn btn-primary btn-sm"
                                            onclick="return confirm('Kupiti igru @item.Title za @item.Price RSD?');">
                                        Kupi Odmah
                                    </button>
                                }
                                else
                                {
                                    <button type="button" class="btn btn-outline-secondary btn-sm" disabled
                                            style="border-color: #444; color: #666;">
                                        Nedovoljno novca
                                    </button>
                                }
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    }
</div>

@if (!Model.Any())
{
    <div class="text-center mt-5 py-5">
        <h3 class="text-muted">Nema igara koje odgovaraju pretrazi.</h3>
        <p class="text-secondary">Pokušajte da promenite filtere ili dodajte novac na račun.</p>
        <a asp-action="Index" class="btn btn-outline-primary mt-3">Prikaži sve igre</a>
    </div>
}