@model IEnumerable<GameShop.MVC.ViewModels.GameViewModel>

@{
    ViewData["Title"] = "Moja Biblioteka";
}

<div class="d-flex justify-content-between align-items-center mb-5">
    <h1 class="display-4 fw-bold" style="color: var(--neon-green); text-shadow: 0 0 15px rgba(0,255,0,0.4);">
        MOJA KOLEKCIJA
    </h1>
    <a asp-action="Index" class="btn btn-outline-primary">
        <i class="bi bi-cart"></i> Nazad u Prodavnicu
    </a>
</div>

@if (TempData["SuccessMessage"] != null)
{
    <div class="alert alert-success text-center border-0 mb-4" style="background: rgba(25, 135, 84, 0.2); color: var(--neon-green);">
        @TempData["SuccessMessage"]
    </div>
}
<div class="card mb-5" style="background: rgba(20, 20, 20, 0.6); border: 1px solid rgba(255, 255, 255, 0.1); border-radius: 15px; backdrop-filter: blur(10px);">
    <div class="card-body p-4">
        <form asp-action="MyLibrary" method="get">
            <div class="row g-3 align-items-end justify-content-center">

                <div class="col-md-5">
                    <label class="form-label text-muted small text-uppercase">Pretraži svoje igre</label>
                    <input type="text" name="searchString" class="form-control"
                           placeholder="Naziv igre..."
                           value="@Context.Request.Query["searchString"]"
                           style="background: #111; border: 1px solid #333; color: white;" />
                </div>

                <div class="col-md-4">
                    <label class="form-label text-muted small text-uppercase">Filtriraj po žanru</label>
                    <select name="gameGenre" class="form-select" asp-items="ViewBag.Genres"
                            style="background: #111; border: 1px solid #333; color: white;">
                        <option value="">Sve moje igre</option>
                    </select>
                </div>

                <div class="col-md-2 d-grid">
                    <button type="submit" class="btn btn-primary">
                        Nađi
                    </button>
                </div>
            </div>
        </form>
    </div>
</div>

<div class="row row-cols-1 row-cols-md-2 row-cols-lg-4 g-4">
    @foreach (var item in Model)
    {
        <div class="col">
            <div class="card h-100 game-card">

                <div class="card-header bg-transparent border-0 d-flex justify-content-between pt-3 px-3">
                    <span class="badge bg-secondary">@item.Genre</span>
                    <span class="badge border border-success text-success" style="background: rgba(0,255,0,0.1)">KUPLJENO</span>
                </div>

                <div class="card-body d-flex flex-column">
                    <h5 class="card-title text-uppercase fw-bold mb-2" style="color: var(--neon-green);">@item.Title</h5>
                    <p class="card-text text-muted small text-truncate">@item.Description</p>

                    <div class="mt-auto pt-3">
                        <button class="btn btn-primary w-100" style="box-shadow: 0 0 15px rgba(0,255,0,0.4);">
                            Instaliraj / Igraj 🎮
                        </button>
                    </div>
                </div>
            </div>
        </div>
    }
</div>

@if (!Model.Any())
{
    <div class="text-center mt-5 py-5">
        <div class="mb-3" style="font-size: 3rem; color: #333;">📂</div>
        <h3 class="text-muted">Nema rezultata.</h3>
        @if (Context.Request.Query.ContainsKey("searchString"))
        {
            <p class="text-secondary">Pokušajte sa drugom pretragom.</p>
            <a asp-action="MyLibrary" class="btn btn-outline-secondary mt-2">Prikaži sve</a>
        }
        else
        {
            <p class="text-secondary">Još uvek niste kupili nijednu igru.</p>
            <a asp-action="Index" class="btn btn-primary mt-3">Idi u Prodavnicu</a>
        }
    </div>
}