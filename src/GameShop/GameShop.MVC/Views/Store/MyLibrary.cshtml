@model IEnumerable<GameShop.MVC.ViewModels.GameViewModel>

@{
    ViewData["Title"] = "Moja Biblioteka";
}

<div class="d-flex justify-content-between align-items-center mb-4">
    <h1>Moja Biblioteka</h1>
    <a asp-action="Index" class="btn btn-outline-primary">Nazad u prodavnicu</a>
</div>

@if (TempData["SuccessMessage"] != null)
{
    <div class="alert alert-success">@TempData["SuccessMessage"]</div>
}

<div class="row">
    @foreach (var item in Model)
    {
        <div class="col-md-3 mb-4">
            <div class="card h-100 border-success">
                <div class="card-header bg-success text-white">Kupljeno</div>
                <div class="card-body">
                    <h5 class="card-title">@item.Title</h5>
                    <p class="card-text">@item.Genre</p>
                    <a href="#" class="btn btn-success w-100 mt-2">Instaliraj / Igraj</a>
                </div>
            </div>
        </div>
    }

    @if (!Model.Any())
    {
        <div class="col-12 text-center mt-5">
            <p class="lead">Još uvek niste kupili nijednu igru.</p>
            <a asp-action="Index" class="btn btn-primary mt-3">Započni kupovinu</a>
        </div>
    }
</div>