@model IEnumerable<GameShop.MVC.ViewModels.GameViewModel>

@{
    ViewData["Title"] = "Moja Biblioteka";
}

<link rel="stylesheet" href="~/css/store.css" />

<div class="container">

    <div class="d-flex justify-content-between align-items-center mb-4 mt-5">
        <h2 class="page-header-title">
            <i class="bi bi-collection-play-fill me-2"></i> Moja Kolekcija
        </h2>

        <a asp-action="Index" class="btn btn-outline-light text-uppercase fw-bold custom-back-btn ls-1 fs-09">
            <i class="bi bi-arrow-left"></i> Nazad u prodavnicu
        </a>
    </div>

    @if (TempData["SuccessMessage"] != null)
    {
        <div class="alert alert-dismissible fade show mb-4 alert-neon-success" role="alert">
            <i class="bi bi-check-circle-fill me-2"></i>
            @TempData["SuccessMessage"]
            <button type="button" class="btn-close btn-close-white" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    }

    <div class="glass-panel p-4 mb-5">
        <form asp-action="MyLibrary" method="get" class="row g-3 align-items-end">

            <div class="col-md-5">
                <label class="form-label search-label">Pretraži igre</label>
                <input type="text" name="searchString" class="form-control"
                       placeholder="Naziv igre..."
                       value="@Context.Request.Query["searchString"]" />
            </div>

            <div class="col-md-4">
                <label class="form-label search-label">Žanr</label>
                <select name="gameGenre" class="form-select" asp-items="ViewBag.Genres">
                    <option value="">Sve moje igre</option>
                </select>
            </div>

            <div class="col-md-3">
                <button type="submit" class="btn btn-primary w-100 fw-bold">
                    <i class="bi bi-search"></i> NAĐI
                </button>
            </div>
        </form>
    </div>

    <div class="row row-cols-1 row-cols-md-2 row-cols-lg-4 g-4">
        @foreach (var game in Model)
        {
            <div class="col">
                <div class="card game-card h-100 border-0">

                    <div class="library-card-img-wrapper">
                        @if (!string.IsNullOrEmpty(game.CoverImage))
                        {
                            <img src="~/images/games/@game.CoverImage" alt="@game.Title" class="store-card-img">
                        }
                        else
                        {
                            <div class="d-flex align-items-center justify-content-center h-100 bg-dark">
                                <i class="bi bi-image text-muted fs-1"></i>
                            </div>
                        }

                        <span class="badge bg-success library-purchased-badge">
                            <i class="bi bi-check-lg"></i> KUPLJENO
                        </span>
                    </div>

                    <div class="card-body d-flex flex-column p-3">
                        <h5 class="store-card-title text-truncate">
                            @game.Title
                        </h5>
                        <div class="mb-2">
                            <span class="badge bg-secondary bg-opacity-25 border border-secondary text-light">@game.Genre</span>
                        </div>

                        <p class="card-text text-muted small flex-grow-1 text-clamp-3">
                            @game.Description
                        </p>

                        <div class="mt-3">
                            <button onclick="pokreniIgru('@game.Title.Replace("'", "\\'")')" class="btn btn-primary w-100 fw-bold">
                                <i class="bi bi-play-fill"></i> IGRAJ SADA
                            </button>
                        </div>
                    </div>
                </div>
            </div>
        }
    </div>

    @if (!Model.Any())
    {
        <div class="text-center mt-5 py-5">
            <i class="bi bi-folder2-open display-1 text-muted mb-3 opacity-50"></i>
            <h3 class="text-muted font-orbitron">Nema rezultata.</h3>

            @if (Context.Request.Query.ContainsKey("searchString") || Context.Request.Query.ContainsKey("gameGenre"))
            {
                <p class="text-secondary">Pokušajte sa drugom pretragom ili filterom.</p>
                <a asp-action="MyLibrary" class="btn btn-outline-light mt-2">Prikaži sve igre</a>
            }
            else
            {
                <p class="text-secondary">Još uvek niste kupili nijednu igru.</p>
                <a asp-action="Index" class="btn btn-primary mt-3 px-4 py-2">IDI U PRODAVNICU</a>
            }
        </div>
    }

</div>

@section Scripts {
    <script>
        function pokreniIgru(imeIgre) {
            alert( "Igra je pokrenuta");
        }
    </script>
}