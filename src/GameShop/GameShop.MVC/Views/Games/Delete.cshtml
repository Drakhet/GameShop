@model GameShop.MVC.ViewModels.GameViewModel

@{
    ViewData["Title"] = "Brisanje Igre";
}

<link rel="stylesheet" href="~/css/games.css" />

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-6">

            <div class="glass-panel p-5 text-center">

                <h2 class="page-header-title mb-4">
                    Brisanje Igre
                </h2>

                <h4 class="text-white mb-5" style="font-weight: normal;">
                    Da li ste sigurni da želite da obrišete igru <br />
                    <span class="text-neon fw-bold mt-2 d-inline-block">"@Model.Title"</span>?
                </h4>

                <form asp-action="Delete">
                    <input type="hidden" asp-for="Id" />

                    <div class="d-flex justify-content-center gap-3">
                        <button type="submit" class="btn btn-danger fw-bold px-4 py-2">
                            OBRIŠI
                        </button>

                        <a asp-action="Index" class="btn btn-outline-light px-4 py-2">
                            Odustani
                        </a>
                    </div>
                </form>

            </div>
        </div>
    </div>
</div>