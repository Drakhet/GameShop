@model GameShop.MVC.ViewModels.GameViewModel

@{
    ViewData["Title"] = "Detalji Igre";
}

<h1>Detalji</h1>

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="glass-panel">

                <div class="d-flex justify-content-between align-items-start mb-4">
                    <div>
                        <h1 class="fw-bold mb-0">@Model.Title</h1>
                        <span class="badge bg-secondary mt-2">@Model.Genre</span>
                    </div>
                    <h2 class="fw-bold" style="color: #fff;">@Model.Price.ToString("N0") RSD</h2>
                </div>

                <hr style="border-color: var(--neon-green);" />

                <div class="py-3">
                    <h5 class="text-uppercase text-muted small">Opis igre</h5>
                    <p class="lead" style="color: #ddd;">@Model.Description</p>
                </div>

                <div class="row mb-4">
                    <div class="col-6">
                        <h5 class="text-uppercase text-muted small">Datum izlaska</h5>
                        <p>@Model.ReleaseDate.ToShortDateString()</p>
                    </div>
                </div>

                <div class="d-flex justify-content-end gap-2">
                    <a asp-action="Index" class="btn btn-outline-secondary">Nazad na listu</a>

                    @if (User.IsInRole("Admin"))
                    {
                        <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-warning">Izmeni (Admin)</a>
                    }

                    @if (User.Identity.IsAuthenticated)
                    {
                        <a asp-controller="Store" asp-action="Index"
                           asp-route-searchString="@Model.Title"
                           class="btn btn-primary">
                            Pronađi u Prodavnici
                        </a>
                    }
                </div>

            </div>
        </div>
    </div>
</div>