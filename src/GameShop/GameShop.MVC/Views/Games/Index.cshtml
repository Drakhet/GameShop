@model IEnumerable<GameShop.MVC.ViewModels.GameViewModel>

@{
    ViewData["Title"] = "Pregled Igara";
}
 <div class="d-flex justify-content-between align-items-center mb-5">
            <h1 class="display-4 fw-bold" style="color: var(--neon-green);">KATALOG IGARA</h1>
            @if (User.IsInRole("Admin"))
            {
       
                <a asp-action="Create" class="btn btn-primary">
                    + Nova Igra
                </a>
            }
        </div>

        <div class="row row-cols-1 row-cols-md-3 g-4">
            @foreach (var item in Model)
            {
                <div class="col">
                    <div class="card h-100 game-card">
                        <div class="card-header bg-transparent border-0 text-end">
                            <span class="badge bg-secondary">@item.Genre</span>
                        </div>
                        <div class="card-body d-flex flex-column">
                            <h5 class="card-title text-uppercase fw-bold" style="color: var(--neon-green);">@item.Title</h5>
                            <p class="card-text text-muted text-truncate">@item.Description</p>

                            <div class="mt-auto d-flex justify-content-between align-items-center pt-3 border-top border-secondary">
                                <span class="fw-bold text-white">@item.Price.ToString("N0") RSD</span>
                                <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-outline-primary btn-sm">
                                    Detalji
                                </a>
                            </div>
                        </div>
                    </div>
                </div>
            }
        </div>
