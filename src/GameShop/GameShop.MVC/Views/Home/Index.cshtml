@model IEnumerable<GameShop.MVC.ViewModels.GameViewModel>

@{
    ViewData["Title"] = "Početna";
}

<link rel="stylesheet" href="~/css/games.css" />

<div class="container">

    <div class="glass-panel text-center mb-5 mt-5 py-5">
        <h1 class="display-3 fw-bold text-uppercase text-neon text-shadow-neon font-orbitron">
            Dobrodošli u GameShop
        </h1>
        <p class="lead text-muted text-uppercase ls-2">Najbolje igre na jednom mestu</p>
    </div>

    <div class="mb-4">
        <h3 class="text-uppercase fw-bold m-0 text-neon font-orbitron">
            <i class="bi bi-star-fill me-2"></i> Izdvajamo iz ponude
        </h3>
    </div>

    <div class="row row-cols-1 row-cols-md-2 row-cols-lg-3 g-4">
        @foreach (var item in Model)
        {
            <div class="col">
                <div class="card h-100 game-card border-0">

                    <div class="game-card-img-wrapper">
                        @if (!string.IsNullOrEmpty(item.CoverImage))
                        {
                            <img src="~/images/games/@item.CoverImage" alt="@item.Title" class="game-card-img">
                        }
                        else
                        {
                            <div class="d-flex align-items-center justify-content-center h-100 bg-dark">
                                <i class="bi bi-image text-muted fs-1"></i>
                            </div>
                        }

                        <span class="badge bg-dark bg-opacity-75 border border-secondary text-light position-absolute top-0 end-0 m-2">
                            @item.Genre
                        </span>
                    </div>

                    <div class="card-body d-flex flex-column p-4">

                        <h5 class="game-card-title">
                            @item.Title
                        </h5>

                        <div class="mt-auto pt-3 d-flex justify-content-between align-items-center">
                            <span class="fs-5 fw-bold text-white">@item.Price.ToString("N0") RSD</span>

                            <a asp-controller="Games" asp-action="Details" asp-route-id="@item.Id"
                               class="btn btn-primary btn-sm fw-bold px-3">
                                Detalji
                            </a>
                        </div>
                    </div>
                </div>
            </div>
        }
    </div>
</div>